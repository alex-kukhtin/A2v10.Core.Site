<!DOCTYPE html>
<html lang="uk">
<head prefix="og: http://ogp.me/ns#">
	<meta charset="utf-8" />
	<meta http-equiv="x-ua-compatible" content="ie=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="description" content="A2v10 - a platform for fast development of business applications" />
	<meta name="theme-color" content="#dd2c5e" />
	<title>@ViewData["Title"]</title>

	<meta property="og:description" content="A2v10. Applications for business" />
	<meta property="og:title" content="A2v10 Platform" />
	<meta property="og:image" content="https://a2v10.com/img/a2_logo_256.png" />
	<meta property="og:url" content="https://a2v10.com" />
	<meta property="og:site_name" content="a2v10.com" />
	<meta property="og:locale" content="en_US" />

	<link rel="manifest" href="~/manifest.json">
	<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" async />
</head>
<body>
	<header>
		<nav class="navbar navbar-dark bg-primary fixed-top navbar-expand-sm navbar-toggleable-sm @ViewBag.NavClass">
			<div class="container">
				<a href="/" class="navbar-brand d-inline-flex align-items-center">
					<i class="ico ico-a2v10-logo"></i>
					<span>
						<strong>A2v10</strong> Platform
					</span>
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="switch navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse justify-content-end" id="menu">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href="/en/downloads" aria-label="Downloads">Downloads</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="https://docs.a2v10.com" target="_blank" rel="noopener">Documentation (ru)</a>
						</li>
						<li class="nav-item" style="display:none">
							<a class="nav-link" asp-action="privacy">Contacts</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" target="_blank" rel="noopener" href="https://github.com/alex-kukhtin/a2v10">Open source</a>
						</li>
						<li class="nav-item">
							<div class="nav-link">
								<a class="nav-link d-inline p-1 disabled" href="/" aria-label="English version">EN</a>
								<a class="nav-link d-inline p-1" href="/uk" aria-label="Ukrainian version">UK</a>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<main role="main">
		@RenderBody()
	</main>

	<footer class="footer bg-dark py-3 pb-3 text-light small">
		<div class="container d-flex justify-content-between">
			<div>&copy; 2016-2020 Olexandr Kukhtin <a class="ml-3 text-light" href="mailto:info@a2v10.com" rel="noopener" target="_blank"><span>info@a2v10.com</span></a></div>
			<div class="links">
				<a class="text-light" href="https://github.com/alex-kukhtin/a2v10" target="_blank" rel="noopener" title="GitHub" aria-label="GitHub code">
					<i class="ico ico-24 ico-github"></i>
				</a>
				<a class="text-light" href="https://www.facebook.com/groups/a2v10" target="_blank" rel="noopener" title="FaceBook" aria-label="A2v10 FaceBook group">
					<i class="ico ico-24 ico-facebook"></i>
				</a>
				<a class="text-light" href="" target="_blank" rel="noopener" title="Linked In" style="display:none">
					<i class="ico ico-24 ico-linkedin"></i>
				</a>
			</div>
		</div>
	</footer>

	<partial name="../_SiteScripts" />

	@RenderSection("Scripts", required: false)
</body>
</html>
